# frozen_string_literal: true

source "https://rubygems.org"

ruby "~> 3.0"        # 사용 중인 Ruby 버전에 맞추어 필요 시 조정

gem "jekyll", "~> 4.3"   # Jekyll 본체
# Ruby 3.x 에서는 webrick 웹서버를 별도로 명시해야 함
gem "webrick", "~> 1.7"

# Jekyll 플러그인 그룹
group :jekyll_plugins do
  gem "jekyll-archives"
  gem "jekyll-diagrams"
  gem "jekyll-email-protect"
  gem "jekyll-feed"
  gem "jekyll-imagemagick"
  gem "jekyll-minifier"
  gem "jekyll-paginate-v2"
  gem "jekyll-scholar"
  gem "jekyll-sitemap"
  gem "jekyll-target-blank"
  gem "jekyll-twitter-plugin"
  gem "jemoji"
end

gem "feedjira", "~> 3.2"
gem "httparty", "~> 0.21"
